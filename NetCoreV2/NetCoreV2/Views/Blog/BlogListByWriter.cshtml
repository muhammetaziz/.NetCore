@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
@{
    string durum = "";
    string s = "bg-warning";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglarınız</h4>
            <table class="table table-bordered ">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        @if (item.BlogStatus == true)
                        {
                            durum = "Aktif";
                            s = "bg-success";
                        }
                        else
                        {
                            s = "bg-danger";
                            durum = "Pasif";
                        }
                        <tr>
                            <td>@item.BlogID</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@item.BlogTitle</td>
                            <td>@item.BlogCreateDate.ToShortDateString()</td>
                            <td class="@s">@durum</td>
                            <td><a href="#" class="btn btn-gradient-primary">Düzenle</a></td>
                            <td><a href="#" class="btn btn-gradient-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>

         <a class="btn btn-gradient-success" href="/Blog/BlogAdd"><i class="mdi mdi-plus">Yeni Blog Oluştur</i></a> 
    </div>
</div>





