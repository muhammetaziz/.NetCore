
<div class="tech-btm">
    <h4>Mail bültenine abone olun</h4>
    <p>Gelişmelerden haberdar olun.</p>
    <form method="post">
        <input name="Mail" id="txtmail" type="email" placeholder="Email" required="" class="tech-btm">
        <input type="submit" id="btn" value="Abone Ol">
    </form>
</div>

<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            Mail: $("#txtmail").val()
        };
        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });

</script>


 
