@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
            {
                <h1>Yeni Mesaj</h1>

                <label class="form-label">Alıcı</label>
@*                 @Html.TextBoxFor(x => x.ReciverUser.WriterEmail, new { @class = "form-control", @type = "email" })
 *@                <br />

                <label class="form-label">Konu</label>
                @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control" })

                <br />

                <label class="form-label">İçerik</label>
                @Html.TextAreaFor(x => x.MessageDetails, 20, 3, new { @class = "form-control" })

                <br />
                <br />
                <button class="btn btn-primary submit mb-4"> <a href="/Message/SendMessage/">Gönder</a></button>

            }
        </div>
    </div>
</div>


