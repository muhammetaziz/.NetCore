@using EntityLayer.Concrete
@model List<Blog>
@{
    string status = "";
    string statu = "";
}
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>CategoryName</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            if (item.BlogStatus)
                            {
                                statu = "Aktif";
                                status = "text-success";
                            }
                            else
                            {
                                statu = "Pasif";
                                status = "text-danger";
                            }
                            <tbody>
                                <tr>
                                    <td>  <img src="@item.BlogImage" class="mr-2" alt="image"> </td>
                                    <td>@item.BlogTitle</td>
                                    <td>@item.BlogCreateDate.ToShortDateString()</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td class="@status">@statu</td>
                                    <td><a href="/Blog/BlogReadAll/@item.BlogID" class="btn btn-gradient-info">Detaylar</a></td>

                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>