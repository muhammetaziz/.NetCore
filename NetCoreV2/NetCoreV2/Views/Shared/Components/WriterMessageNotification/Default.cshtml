@using EntityLayer.Concrete
@model List<Message>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    <div class="dropdown-divider"></div>
    @foreach (var item in Model)
    {
        <a class="dropdown-item preview-item">

            <div class="preview-thumbnail">
                <img src="~/writer/assets/images/faces/face4.jpg" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.MessageSender sana mesaj gönderdi</h6>
                <p><strong>Konu: @item.MessageSubject</strong></p>
                <p class="text-gray mb-0"> @item.MessageDate.ToShortDateString() </p>
            </div>
        </a>
    }
    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">3 Yeni Mesaj</h6>
</div>


             
DateTime messageDate = // SQL'den gelen tarih örneğin: new DateTime(2024, 8, 7, 10, 30, 0); 
DateTime now = DateTime.Now; 
TimeSpan difference = now - messageDate;  
string timeMessage; 

if (difference.TotalDays >= 1)
{
    timeMessage = $"{(int)difference.TotalDays} gün önce mesaj gönderildi.";
}
else if (difference.TotalHours >= 1)
{
    timeMessage = $"{(int)difference.TotalHours} saat önce mesaj gönderildi.";
}
else if (difference.TotalMinutes >= 1)
{
    timeMessage = $"{(int)difference.TotalMinutes} dakika önce mesaj gönderildi.";
}
else
{
    timeMessage = "Az önce mesaj gönderildi.";
}

// Sonucu yazdır
Console.WriteLine(timeMessage);
