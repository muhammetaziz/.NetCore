@model IEnumerable<EntityLayer.Concrete.Comment>



<div class="comment-top border-bottom">

    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    { 
        <div class="media  ">

            <img src="~/Web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUserName</h5>
                <i class="text-black">@item.CommentTitle &nbsp;</i>
                <small>@item.CommentDate.ToShortDateString()</small>
                <p>@item.CommentContent</p>

            </div>
        </div>
    }
</div>

 