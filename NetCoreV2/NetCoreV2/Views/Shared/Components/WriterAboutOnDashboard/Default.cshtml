@using EntityLayer.Concrete
@model List<Writer>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Yazar Hakkında</h3>
                <h5>@ViewBag.UserName</h5>
                <h5>@ViewBag.UserMail</h5>

                <div class="d-flex">
                    <div class="d-flex align-items-center mr-4 text-muted font-weight-light">
                        <div class="d-flex mt-5 align-items-top">
                            @foreach (var item in Model)
                            {
                                <img src="@item.WriterImage" class="img-sm rounded-circle mr-3" alt="image">
                                <div class="mb-0 flex-grow">
                                    <h4 class="mr-2 mb-2">@item.WriterName</h4>
                                    <h5 class="mr-2 mb-2">@item.WriterEmail</h5>
                                    <p class="mb-0 font-weight-light">@item.WriterAbout</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
