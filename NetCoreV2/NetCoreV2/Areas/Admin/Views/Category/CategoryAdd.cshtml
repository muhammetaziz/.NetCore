@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}

@* @using (Html.BeginRouteForm(routeName:"Admin",routeValues:new{action="CategoryAdd",controller="Category",area="Admin"},method:FormMethod.Post))
 *@
 @using (Html.BeginForm("CategoryAdd", "Category", new { area = "Admin" }, FormMethod.Post))

 {
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori adı girin" })
        @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kategori Açıklama")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control", rows = 3, placeholder = "Kategori açıklaması girin" })
        @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
    </div>

    <div class="form-group form-check">
        @Html.CheckBoxFor(x => x.CategoryStatus, new { @class = "form-check-input" })
        @Html.Label("Aktif/Pasif")
    </div>

    <div class="text-center">
        <button  class="btn btn-primary btn-block">Kaydet</button>
    </div>
} 