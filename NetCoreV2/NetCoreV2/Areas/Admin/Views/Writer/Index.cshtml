@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}
@{
    string statusBadge = "";
    string statClass = "";
    string stat = "";
    string statStyle = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazarlar</h4>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th width="10px"></th> 
                        <th>Yazar Adı</th>
                        <th>Yazar Hakkında</th>
                        <th width="10px">E-Mail</th>
                        <th width="10px">Durum</th>
                        <th width="100px"></th>
                         
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        {
                            if (item.WriterStatus)
                            {
                                stat = "Aktif";
                                statClass = "fa fa-solid fa-toggle-on";
                                statStyle = "color: #6eea39;";
                            }
                            else
                            {
                                stat = "Pasif";
                                statClass = "fa fa-solid fa-toggle-off";
                                statStyle = "color: #ff0000;";  
                            }
                        }
                        <tr>
                            <td width="50px" height="50px"><img src="@item.WriterImage" alt="Writer Image" /></td>
                            <td>@item.WriterName</td>
                            <td>@item.WriterAbout.Substring(0 ,200)</td>
                            <td>@item.WriterEmail</td>
                            <td><label class="@statusBadge">@stat</label></td>
                            <td>
                                <a href="/Admin/Writer/WriterChangeStatus/@item.WriterID/" id="EditBtn" onclick="return confirm('Düzenlemek istediğinize emin misiniz');" class="btn btn-outline-primary btn-sm "><i class="@statClass" style="@statStyle"></i></a>
                                <a href="/Admin/Writer/WriterEdit/@item.WriterID/" id="EditBtn" onclick="return confirm('Düzenlemek istediğinize emin misiniz');" class="btn btn-outline-primary btn-sm"><i class="fa fa-edit"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
            @*  <a href="/Admin/Category/CategoryAdd" class="btn btn-w-m btn-primary">Yeni Kategori</a> *@
        </div>
    </div>
</div>



