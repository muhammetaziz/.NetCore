@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}
@{
    string statusBadge = "";
    string stat = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazarlar</h4>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th width="10px"></th>

                        <th>Yazar Adı</th>
                        <th>Yazar Hakkında</th>
                        <th width="10px">E-Mail</th>
                        <th width="10px">Durum</th>
                        <th width="10px">Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                         
                        {
                            if (item.WriterStatus)
                            {
                                stat = "Aktif";
                                statusBadge = "badge badge-primary";
                            }
                            else
                            {
                                stat = "Pasif";
                                statusBadge = "badge badge-danger";
                            }
                        }
                        <tr>
                            <td width="50px" height="50px"><img src="@item.WriterImage" alt="Writer Image" /></td>
                            <td>@item.WriterName</td>
                            <td>@item.WriterAbout</td>
                            <td>@item.WriterEmail</td>
                            <td><label class="@statusBadge">@stat</label></td>
                            <td><a href="/Admin/Writer/WriterEdit/@item.WriterID/" id="EditBtn" onclick="return confirm('Düzenlemek istediğinize emin misiniz');" class="btn btn-w-m btn-warning">Düzenle</a></td>
                            <td><a href="/Admin/Writer/WriterChangeStatus/@item.WriterID/" id="EditBtn" onclick="return confirm('Düzenlemek istediğinize emin misiniz');" class="btn btn-w-m btn-warning">Aktif Pasif</a></td>
                             
                        </tr>
                    }
                </tbody>
            </table>
            @*  <a href="/Admin/Category/CategoryAdd" class="btn btn-w-m btn-primary">Yeni Kategori</a> *@
        </div>
    </div>
</div>



