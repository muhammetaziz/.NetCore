@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "WriterEdit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}

@using (Html.BeginForm("WriterEdit", "Writer", new { area = "Admin" }, FormMethod.Post))

{
    @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control", placeholder = "Id adı girin", @hidden = true })

    <div class="form-group">
        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", placeholder = "Yazar adı girin"   })
        @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Yazar Hakkında")
        @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control", rows = 3, placeholder = "Kategori açıklaması girin"})
        @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Yazar E-mail")
        @Html.TextBoxFor(x => x.WriterEmail, new { @class = "form-control", rows = 3, placeholder = "Kategori açıklaması girin"  })
        @Html.ValidationMessageFor(x => x.WriterEmail, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Yazar Şifre")
        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", rows = 3, placeholder = "Kategori açıklaması girin",@type="password"  })
        @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })
    </div> 

    <div class="form-group">
        @Html.Label("Resim")
        @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control", rows = 3, placeholder = "Kategori açıklaması girin"  })
        @Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger" })
    </div>

    <div class="form-group form-check">
        @Html.CheckBoxFor(x => x.WriterStatus, new { @class = "form-check-input" })
        @Html.Label("Aktif/Pasif")
    </div>
    <div class="text-center">
        <button class="btn btn-primary btn-block">Güncelle</button>
    </div>
}


