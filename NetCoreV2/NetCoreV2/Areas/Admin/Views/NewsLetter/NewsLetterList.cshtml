@using EntityLayer.Concrete
@model List<NewsLetter>
@{
    ViewData["Title"] = "NewsLetterList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}

@{
    string statusBadge = "";
    string stat = "";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Aboneler</h3>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th width="10px">#</th>
                        <th>Abone Mail</th>
                        <th width="10px">Durum</th>
                        <th width="10px">Düzenle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        {

                            if (item.MailStatus)
                            {
                                stat = "Aktif";
                                statusBadge = "badge badge-primary";
                            }
                            else
                            {
                                stat = "Pasif";
                                statusBadge = "badge badge-danger";
                            }
                        }
                        <tr>
                            <td>@item.MailID</td>
                            <td>@item.Mail</td>
                            <td><label class="@statusBadge">@stat</label></td>
                            <td><a href="/Admin/NewsLetter/NewsChangeStatus/@item.MailID/" id="DeleteBtn" onclick="return confirm('Düzenlemek istediğinize emin misiniz');" class="btn btn-w-m btn-warning">Aktif/Pasif</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>