@using EntityLayer.Concrete
@model List<Natification>
@{
    ViewData["Title"] = "AdminNatificationList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}

@{
    string stat = "";
    string statusBadge = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategoriler</h4>
            <table class="table table-hover">
                <thead>
                    <tr class="tablero"> 
                        <th>Bildirim</th>
                        <th>Tarih</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        {

                            if (item.NatificationStatus)
                            {
                                stat = "Aktif";
                                statusBadge = "badge badge-primary";
                            }
                            else
                            {
                                stat = "Pasif";
                                statusBadge = "badge badge-danger";
                            }
                        }
                        <tr> 
                            <td>@item.NotificationDetails</td>
                            <td>@item.NatificationDate.ToShortDateString()</td>
                            <td>@item.NatificationStatus</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Admin/Notification/AddNotification/" class="btn btn-w-m btn-primary">Bildirim Oluştur</a>
        </div>
    </div>
</div>