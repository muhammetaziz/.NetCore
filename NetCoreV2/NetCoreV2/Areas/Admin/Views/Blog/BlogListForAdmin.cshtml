@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListForAdmin";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}
 
@{
    string statusBadge = "";
    string stat = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Bloglar</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th width="10px"></th>

                        <th>Yazar Adı</th>
                        <th>Yazar Hakkında</th>
                        <th width="10px">E-Mail</th>
                        <th width="10px">Durum</th>
                        <th width="10px"></th>
                        <th width="10px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        {
                            if (item.BlogStatus)
                            {
                                stat = "Aktif";
                                statusBadge = "badge badge-primary";
                            }
                            else
                            {
                                stat = "Pasif";
                                statusBadge = "badge badge-danger";
                            }
                        }
                        <tr>
                            <td width="50px" height="50px"><img src="@item.BlogImage" alt="Writer Image" /></td>
                            <td>@item.BlogTitle</td>
                            <td>@item.BlogContent</td>
                             <td>@item.Category.CategoryName</td>

                            <td>@item.BlogCreateDate.ToShortDateString()</td>
                            <td><label class="@statusBadge">@stat</label></td>
                            <td><a href="/Admin/Writer/WriterChangeStatus/@item.BlogID/" id="EditBtn" onclick="return confirm('Düzenlemek istediğinize emin misiniz');" class="btn btn-w-m btn-primary ">Aktif Pasif</a></td>
                            <td><a href="/Admin/Writer/WriterEdit/@item.BlogID/" id="EditBtn" onclick="return confirm('Düzenlemek istediğinize emin misiniz');" class="btn btn-w-m btn-warning">Düzenle</a></td>

                        </tr>
                    }
                </tbody>
            </table>
            @*  <a href="/Admin/Category/CategoryAdd" class="btn btn-w-m btn-primary">Yeni Kategori</a> *@
        </div>
    </div>
</div>
