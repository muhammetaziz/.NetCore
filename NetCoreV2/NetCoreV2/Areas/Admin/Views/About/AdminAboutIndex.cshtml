@using EntityLayer.Concrete
@model List<About>

@{
    ViewData["Title"] = "AdminAboutIndex";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        @foreach (var item in Model)
        {
            <div class="card-body">
                <h3>Hakkımızda Sayfası</h3>
                <p>@item.AboutDetails1</p>
                <br />
                <p>@item.AboutDetails2</p>
                <br />
                <div style="align-items:center;align-content:center">

                    <span>
                        <img width="200px" height="200px" src="@item.AboutImage1" alt="Alternate Text" />
                    </span>
                    <span>
                        <img width="200px" height="200px" src="@item.AboutImage2" alt="Alternate Text" />

                    </span>
                </div>
                <br />
            </div>
            <a href="/Admin/About/EditAbout/@item.AboutID/" id="DeleteBtn" onclick="return confirm('Düzenlemek istediğinize emin misiniz');" class="btn btn-w-m btn-warning">Düzenle</a>
        }
    </div>
</div>
