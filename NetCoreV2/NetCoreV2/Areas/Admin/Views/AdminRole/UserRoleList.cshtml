@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
} 

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-header">Kullanıcılar</h3>
            <table class="table table-hover table-bordered">

                <tr>
                    <th width="90%">Kullanıcı</th>
                    <th style="text-align:center" width="5%">Rol</th>

                </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td align="center"> <a href="/Admin/AdminRole/AssignRole/@item.Id"><i class="fa fa-users" aria-hidden="true"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a class="btn btn-outline-primary" href="/Admin/AdminRole/Index/"><i class="fa fa-list" aria-hidden="true"></i>  Rol Listesi</a>
            <a class="btn btn-outline-primary" href="/Admin/AdminRole/AddRole/"><i class="fa fa-plus-square" aria-hidden="true"></i>  Yeni Rol Ekle</a>
        </div>
    </div>
</div>
