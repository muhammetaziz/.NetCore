@model EntityLayer.Concrete.Message2

@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutArea.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("NewMessage", "AdminMessage", new { area = "Admin" }, FormMethod.Post))
            {
                <h1>Yeni Mesaj</h1>

                <label class="form-label">Alıcı</label>
                @Html.TextBoxFor(x => x.MessageReciverID, new { @class = "form-control", @type = "number" })
                <br />

                <label class="form-label">Konu</label>
                @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control" })

                <br />

                <label class="form-label">İçerik</label>
                @Html.TextAreaFor(x => x.MessageDetails, 20, 3, new { @class = "form-control" })

                <br />
                <br />
                <button type="submit">Gönder</button>
            }
        </div>
    </div>
</div>
