                    <span> Yeni Mesaj Sayısı </span>
                    <h2 class="font-bold">@ViewBag.ToplamMesajSayısı</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 yellow-bg">
            <div class="row">
                <div class="col-4">
                    <i class="fa fa-comments fa-5x"></i>
                </div>
